image{
  width: 100%;
}
.footer{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-top: 70rpx;


  
}
.footer view{
    background-color: #07c160;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
    color: #fff;
    min-width: 169rpx;
    height: 70rpx;
    border-radius: 10rpx;
}
.footer .share{
    background-color: #f0f3f6;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 22rpx;
    color: #777;
    min-width: 149rpx;
    height: 70rpx;
    position: relative;
}
.copy{
  border:1px solid #f42429;
  color: #f42429!important;
  background-color: #fff!important;
}
.content{
  width: 90%;
  margin-left: 5%;
  min-height:400rpx;
  border:1rpx solid #f1f1f1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 33rpx;
  border-radius: 10rpx;
  color: #777;
}
.page{
  width: 100%;
  height: 100vh;
  background-color: #fff;
}
.share-button{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 9;
  opacity: 0;
}