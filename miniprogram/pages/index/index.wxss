/**index.wxss**/

page {
  background: #f2f2f2;
}
swiper{
  width:100%;
  height:210px;
  background-color: #fff;
}
.input-wrap{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
  height: 50px;
  padding:2px 15px;
  box-sizing: border-box;
  margin-top: 10px;

}
.submit{
  width: 90%;
  height: 80%;
  background-color: #1989fa;
  border-radius: 5px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 14px;
  margin-top: 5px;
  
}
.input-wrap input{
  flex:1;
  background:#fff;
  height: 100%;
  border-radius: 20px;
  padding:  0 10px;
  
}
video{
  width: 90%;
  height: 220px;
  margin-top: 10px;
}
.tips{
  width: 100%;
  padding: 10px 18px;
  box-sizing: border-box;
  font-size: 14px;
  text-align: right;
  color: #777;
}
.tips{
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
  line-height: 60rpx;
  


}
.tips .title{
  width: 100%;
  text-align: left;
}
.tips .content{
  width: 100%;
  text-align: justify;
}