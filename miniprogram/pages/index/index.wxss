page {
  background: #f2f2f2;
}
swiper{
  width:100%;
  height:220px;
}
.input-wrap{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
  height: 50px;
  padding:2px 15px;
  box-sizing: border-box;
  margin-top: 10px;

}
.input-wrap .submit{
  width: 70px;
  height: 80%;
  background-color: #1989fa;
  border-radius: 5px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 14px;
  margin-left: 10px;
  
}
.input-wrap input{
  flex:1;
  background:#fff;
  height: 100%;
  border-radius: 20px;
  padding:  0 10px;
  
}